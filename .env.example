# ==============================================================================
# LOCALELORE ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# For production configuration, see .env.production.example
# ==============================================================================

# ==============================================================================
# APP CONFIGURATION
# ==============================================================================
VITE_APP_TITLE=LocaleLore
VITE_APP_DESCRIPTION=Discover and explore local stories, culture, and hidden gems
VITE_APP_URL=http://localhost:8080

# ==============================================================================
# SUPABASE (Required)
# ==============================================================================
# Get from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key-here

# ==============================================================================
# STRIPE (Required for payments)
# ==============================================================================
# Development: Use test keys (pk_test_... and sk_test_...)
# Production: Use live keys (pk_live_... and sk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# ==============================================================================
# MAPBOX (Required for maps)
# ==============================================================================
# Get from: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token

# ==============================================================================
# MONITORING (Recommended)
# ==============================================================================
# Sentry - Error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================
VITE_ANALYTICS_ID=
VITE_POSTHOG_KEY=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true
VITE_MAINTENANCE_MODE=false
VITE_DEBUG_MODE=false

# ==============================================================================
# DEVELOPMENT
# ==============================================================================
VITE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# ==============================================================================
# For complete production configuration, see .env.production.example
# ==============================================================================