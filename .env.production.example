# ==============================================================================
# LOCALELORE PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# Last Updated: 2025-11-13
# Copy this file to .env for local development or configure in your hosting platform
# ==============================================================================

# ==============================================================================
# APP CONFIGURATION
# ==============================================================================
VITE_APP_TITLE=LocaleLore
VITE_APP_DESCRIPTION=Discover and explore local stories, culture, and hidden gems
VITE_APP_URL=https://localelore.com
VITE_APP_VERSION=1.0.0

# Environment (development | staging | production)
VITE_NODE_ENV=production
NODE_ENV=production

# ==============================================================================
# SUPABASE CONFIGURATION (Required)
# ==============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Backend only (DO NOT expose to frontend - configure in Supabase Edge Functions)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ==============================================================================
# STRIPE PAYMENT CONFIGURATION (Required for monetization)
# ==============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use LIVE keys for production (pk_live_... and sk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...

# Backend only (configure in Supabase Edge Functions secrets)
STRIPE_SECRET_KEY=sk_live_...

# Webhook configuration (get from https://dashboard.stripe.com/webhooks)
# IMPORTANT: Create webhook endpoint pointing to your-domain.com/api/stripe-webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for subscription tiers
STRIPE_PRICE_ID_BASIC=price_...
STRIPE_PRICE_ID_PREMIUM=price_...
STRIPE_PRICE_ID_PRO=price_...

# ==============================================================================
# MAPBOX CONFIGURATION (Required for maps)
# ==============================================================================
# Get from: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoieW91ci11c2VybmFtZSIsImEiOiJjbG...

# Mapbox style (optional - defaults to mapbox://styles/mapbox/streets-v12)
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/streets-v12

# ==============================================================================
# EMAIL CONFIGURATION (Recommended)
# ==============================================================================
# Resend API - Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# Email sender configuration
EMAIL_FROM=noreply@localelore.com
EMAIL_FROM_NAME=LocaleLore

# ==============================================================================
# ERROR TRACKING & MONITORING (Highly Recommended)
# ==============================================================================
# Sentry - Get from: https://sentry.io/settings/projects/your-project/keys/
VITE_SENTRY_DSN=https://...@o....ingest.sentry.io/...
SENTRY_AUTH_TOKEN=sntrys_...
SENTRY_ORG=your-org
SENTRY_PROJECT=localelore

# Sentry configuration
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================
# Google Analytics 4
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Plausible Analytics (alternative to GA)
VITE_PLAUSIBLE_DOMAIN=localelore.com

# PostHog (product analytics)
VITE_POSTHOG_KEY=phc_...
VITE_POSTHOG_HOST=https://app.posthog.com

# ==============================================================================
# PUSH NOTIFICATIONS (Optional)
# ==============================================================================
# VAPID keys for web push - Generate with: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=BD...
VAPID_PRIVATE_KEY=...

# ==============================================================================
# AI & CONTENT MODERATION (Optional)
# ==============================================================================
# OpenAI for content moderation/recommendations
OPENAI_API_KEY=sk-...

# Azure Content Moderator
AZURE_CONTENT_MODERATOR_KEY=...
AZURE_CONTENT_MODERATOR_ENDPOINT=https://....cognitiveservices.azure.com/

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# JWT Secret for custom tokens (if needed)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://localelore.com,https://www.localelore.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_PUSH_NOTIFICATIONS=true
VITE_FEATURE_AI_RECOMMENDATIONS=true
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_SOCIAL_FEATURES=true
VITE_FEATURE_PAYMENT_PROCESSING=true

# Maintenance mode (set to true to show maintenance page)
VITE_MAINTENANCE_MODE=false

# Debug mode (only enable for admins)
VITE_DEBUG_MODE=false

# ==============================================================================
# LOGGING & DEBUGGING
# ==============================================================================
# Log level (debug | info | warn | error)
VITE_LOG_LEVEL=error
LOG_LEVEL=error

# Enable verbose logging
VERBOSE_LOGGING=false

# ==============================================================================
# PERFORMANCE & CACHING
# ==============================================================================
# CDN URL (if using a CDN)
VITE_CDN_URL=https://cdn.localelore.com

# Cache configuration
CACHE_MAX_AGE=31536000
ENABLE_COMPRESSION=true

# ==============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ==============================================================================
# Social media sharing
TWITTER_SITE=@localelore
FACEBOOK_APP_ID=...

# Search engine verification
GOOGLE_SITE_VERIFICATION=...
BING_SITE_VERIFICATION=...

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Connection pooling
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# ==============================================================================
# MEDIA STORAGE
# ==============================================================================
# Max file upload size (bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4

# Image optimization
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048

# ==============================================================================
# ADMIN & SUPPORT
# ==============================================================================
# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@localelore.com

# Support email
SUPPORT_EMAIL=support@localelore.com

# ==============================================================================
# TESTING & DEVELOPMENT
# ==============================================================================
# Only used in development/staging
VITE_DEV_TOOLS=false
ENABLE_SOURCE_MAPS=false

# Test user credentials (DO NOT USE IN PRODUCTION)
# TEST_USER_EMAIL=test@example.com
# TEST_USER_PASSWORD=test123

# ==============================================================================
# BACKUPS & DISASTER RECOVERY
# ==============================================================================
# Backup storage (S3-compatible)
BACKUP_S3_BUCKET=localelore-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=...
BACKUP_S3_SECRET_KEY=...

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ==============================================================================
# COMPLIANCE & LEGAL
# ==============================================================================
# GDPR data retention (days)
DATA_RETENTION_DAYS=365

# Cookie consent
COOKIE_CONSENT_REQUIRED=true

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Never commit this file with real values to version control
# 2. Use environment-specific values in your hosting platform (Lovable, Vercel, etc.)
# 3. Rotate secrets regularly (at least every 90 days)
# 4. Use strong, unique values for all secrets
# 5. Test all integrations in staging before production
# 6. Keep this file in sync with .env.example for documentation
# ==============================================================================
