  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://plausible.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https: https://*.supabase.co; connect-src 'self' ws: wss: https://*.supabase.co https://api.mapbox.com https://www.google-analytics.com https://plausible.io; worker-src 'self' blob:; frame-ancestors 'none'; object-src 'none'
  
  # Performance Headers
  Cache-Control: public, max-age=31536000, immutable
  
  # HSTS (only in production)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(self), notifications=(self), payment=(), usb=()

